#! /usr/bin/env bash

set -e
set -u

flock /tmp/resourcely-install curl -s -L -o /tmp/resourcely-cli-v"$RESOURCELY_VERSION"-linux-amd64.tar.gz https://github.com/Resourcely-Inc/resourcely-container-registry/releases/download/v1.0.12/resourcely-cli-v1.0.12-linux-amd64.tar.gz

flock /tmp/resourcely-install tar -xzf /tmp/resourcely-cli-v"$RESOURCELY_VERSION"-linux-amd64.tar.gz

exec resourcely-cli "$@"
